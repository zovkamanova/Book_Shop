@using BulkyBook.Models
@model Company

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete company</h2>
            <hr />
        </div>
  
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control"/>      
        </div>
          <div class="mb-3">
            <label asp-for="State"></label>
            <input asp-for="State" disabled class="form-control"/>        
        </div>
          <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" disabled class="form-control"/>        
        </div>
          <div class="mb-3">
            <label asp-for="StreetAddress"></label>
            <input asp-for="StreetAddress" disabled class="form-control"/>        
        </div>
          <div class="mb-3">
            <label asp-for="PostalCode"></label>
            <input asp-for="PostalCode" disabled class="form-control"/>        
        </div>
          <div class="mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" disabled class="form-control"/>        
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List 
        </a>
    </div>
    
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
