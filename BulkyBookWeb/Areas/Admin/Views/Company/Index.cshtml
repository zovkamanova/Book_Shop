@using BulkyBook.Models
@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
</div>

<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Company name
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td width="50%">
                    @company.Name
                </td>
                 <td width="50%">
                    @company.State
                </td>
                 <td width="50%">
                    @company.City
                </td>
                 <td width="50%">
                    @company.StreetAddress
                </td>
                 <td width="50%">
                    @company.PostalCode
                </td>
                 <td width="50%">
                    @company.PhoneNumber
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Company" asp-action="Upsert" asp-route-id="@company.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>&nbsp;  Edit</a>
                        <a asp-controller="Company" asp-action="Delete" asp-route-id="@company.Id" class="btn btn-primary mx-2"><i class="bi bi-trash"></i>&nbsp;  Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

